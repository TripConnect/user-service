{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}